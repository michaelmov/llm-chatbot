# LLM Chatbot Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Backend Configuration
# ===================

# LLM Provider (currently only 'anthropic' is supported)
LLM_PROVIDER=anthropic

# Model Configuration
MODEL_NAME=claude-3-5-sonnet-latest
MODEL_TEMPERATURE=0.3
MODEL_MAX_TOKENS=4096

# API Keys (required - never commit these!)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
WEATHER_API_KEY=your-weather-api-key-here

# Frontend URL (used for CORS and trusted origins)
# For production: set to your frontend's public URL
FRONTEND_URL=http://localhost:3000

# ===================
# Frontend Configuration
# ===================

# Backend API URL for auth client (baked into client bundle at build time)
# For production: set to your backend's public URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Backend URL for server-side middleware (runtime, not baked into bundle)
# For Docker: use internal service name (e.g., http://backend:3001)
BACKEND_URL=http://localhost:3001
