{
  "name": "llm-chatbot",
  "version": "1.0.0",
  "private": true,
  "description": "Model-agnostic chatbot with SSE streaming",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently --names 'backend,frontend' --prefix-colors 'bgBlue,bgGreen' \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:with-docker": "concurrently --names 'backend,frontend,db' --prefix-colors 'bgBlue,bgGreen,bgRed' \"npm:db:start\" \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:start": "docker compose -f docker-compose.dev.yml up -d postgres",
    "db:stop": "docker compose -f docker-compose.dev.yml down postgres",
    "db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d",
    "db:generate": "npm run db:generate -w backend",
    "db:migrate": "npm run db:migrate -w backend",
    "db:push": "npm run db:push -w backend",
    "db:studio": "npm run db:studio -w backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.5.3"
  },
  "engines": {
    "node": ">=22.17.0"
  }
}
